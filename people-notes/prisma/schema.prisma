generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
}

model User {
    id        String   @id @default(cuid())
    email     String   @unique
    password  String
    name      String?
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    people    Person[]
}

model Person {
    id              String   @id @default(cuid())
    firstName       String
    lastName        String
    email           String?
    phone           String?
    company         String?
    favoritePokemon String?
    pokemonImageUrl String?
    createdAt       DateTime @default(now())
    updatedAt       DateTime @updatedAt
    userId          String
    user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
    notes           Note[]

    @@index([userId])
}

model Note {
    id        String   @id @default(cuid())
    title     String
    content   String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    personId  String
    person    Person   @relation(fields: [personId], references: [id], onDelete: Cascade)

    @@index([personId])
}
